<!-- Form venue start -->
<%= form_with(model: @venue, local: true) do |f| %>
<!-- Form venue end -->

  <!-- Label and input for dish_id start -->
  <!-- Input for dish_id start -->
  <%= f.hidden_field :dish_id, value: @dish.id %>
  <!-- Input for dish_id end -->
  <!-- Label and input for dish_id end -->

  <!-- Label and input for venue_name start -->
  <div class="form-group">
    <%= f.label :venue_name %>

    <!-- Input for venue_name start -->
    <%= f.text_field :venue_name, class: "form-control" %>
    <!-- Input for venue_name end -->
  </div>
  <!-- Label and input for venue_name end -->

  <%= f.submit "Create venue", class: "btn btn-block btn-outline-secondary" %>
<% end %>
