<% was_validated = dish.errors.any? %>

<%= form_with(model: dish, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% dish_type_class = "form-control" %>
    <% dish_type_was_invalid = dish.errors.include?(:dish_type) %>

    <% if was_validated %>
      <% if dish_type_was_invalid %>
        <% dish_type_class << " is-invalid" %>
      <% else %>
        <% dish_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dish_type %>
    <%= f.text_field :dish_type, class: dish_type_class, placeholder: "Enter dish type" %>
    <% if dish_type_was_invalid %>
      <% dish.errors.full_messages_for(:dish_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = dish.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% dish.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dish_name_class = "form-control" %>
    <% dish_name_was_invalid = dish.errors.include?(:dish_name) %>

    <% if was_validated %>
      <% if dish_name_was_invalid %>
        <% dish_name_class << " is-invalid" %>
      <% else %>
        <% dish_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dish_name %>
    <%= f.text_field :dish_name, class: dish_name_class, placeholder: "Enter dish name" %>
    <% if dish_name_was_invalid %>
      <% dish.errors.full_messages_for(:dish_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% cuisine_class = "form-control" %>
    <% cuisine_was_invalid = dish.errors.include?(:cuisine) %>

    <% if was_validated %>
      <% if cuisine_was_invalid %>
        <% cuisine_class << " is-invalid" %>
      <% else %>
        <% cuisine_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cuisine %>
    <%= f.text_field :cuisine, class: cuisine_class, placeholder: "Enter cuisine" %>
    <% if cuisine_was_invalid %>
      <% dish.errors.full_messages_for(:cuisine).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
