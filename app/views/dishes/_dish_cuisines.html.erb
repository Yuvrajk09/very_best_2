<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Cuisines

    <a data-toggle="collapse" href="#dish_cuisines_new_form">
      Add cuisine
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.cuisines.each do |cuisine| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to cuisine, cuisine %>

        <%= link_to cuisine, method: :delete, data: { confirm: "Do you really want to delete this cuisine" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_cuisines_new_form">
        <%= render partial: "dishes/dish_cuisines_new_form" %>
      </div>
    </div>

  </ul>
</div>
