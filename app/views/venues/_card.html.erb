<div class="card mb-3">
  <h2 class="card-header h4">
    Venue #<%= venue.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Dish</dt>
      <!-- Display dish_id start -->
      <dd>
        <% if @venue.famous_dish.present? %>
          <%= link_to venue.famous_dish, venue.famous_dish %>
        <% end %>
      </dd>
      <!-- Display dish_id end -->

      <dt>Venue name</dt>
      <!-- Display venue_name start -->
      <dd><%= venue.venue_name %></dd>
      <!-- Display venue_name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back venue, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link venue start -->
      <div class="col">
        <%= link_to edit_venue_url(venue), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link venue end -->

      <!-- Delete link venue start -->
      <div class="col">
        <%= link_to venue, method: :delete, data: { confirm: "Do you really want to delete this venue?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link venue end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(venue.updated_at) %> ago
  </div>
</div>
