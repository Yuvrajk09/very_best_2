<%= form_with(model: @dish, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :dish_type %>

    <%= f.text_field :dish_type, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :dish_name %>

    <%= f.text_field :dish_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cuisine %>

    <%= f.text_field :cuisine, class: "form-control" %>
  </div>

  <%= f.submit "Create dish", class: "btn btn-block btn-outline-secondary" %>
<% end %>
